  "version": "0.2.0",
  "compounds": [
    {
      "name": "Develop",
      "configurations": [
        "npm dev",
        "Launch localhost"
      ]
    }
  ],

  "configurations": [
    {
      "type": "node-terminal",
      "command": "npm run dev",
      "name": "npm dev",
      "request": "launch"
    },
    {
      "type": "firefox",
      "firefoxExecutable": "/Applications/Firefox Nightly.app/Contents/MacOS/firefox-bin",
      "request": "launch",
      "reAttach": true,
      "name": "Launch localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
